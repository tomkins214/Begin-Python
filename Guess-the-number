import random

totalGuesses = 0



number= random.randint(1, 20)
print("OK, so I am thinking of a number between 1 and 20.")

while totalGuesses < 6:
  print("Take a guess.")
  guess= input()
  guess= int(guess)
  
  totalGuesses= totalGuesses + 1
  
  if guess < number:
    print("your guess is too low!")
    
  if guess > number:
     print("your guess is too high!")
     
  if guess == number:
      break
      
  if guess == number:
        totalGuesses= str(totalGuesses)
        print("Great!You guessed the number in" + totalGuesses + "guesses!")
  
  if guess != number:
        number= str(number)
        print("Sorry! My number was" + number)
